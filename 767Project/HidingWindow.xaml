            <Button x:Name="btnContinue" Content="Continue" HorizontalAlignment="Left" Margin="13,172,0,0" VerticalAlignment="Top" Width="151" Click="btnContinue_Click" Height="41"/>
            <Button x:Name="btnBack" Content="To Main Program Screen" HorizontalAlignment="Left" Margin="197,172,-53,0" VerticalAlignment="Top" Width="150" Height="41" Click="btnBack_Click"/>
            <Button x:Name="btnOBS" Content="To OBS" HorizontalAlignment="Left" Margin="374,172,-231,0" VerticalAlignment="Top" Width="151" Height="41" IsEnabled="False" Click="btnOBS_Click"/>
        </Grid>

    </Grid>
</Window>
