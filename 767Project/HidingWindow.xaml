        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Stretch" Height="271" VerticalAlignment="Stretch" Width="294" Grid.ColumnSpan="2">
